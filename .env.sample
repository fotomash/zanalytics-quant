# Sample environment configuration for zanalytics-quant
# Copy this file to .env and replace with real values.
# Never commit secrets or the .env file to version control.

# Secret key used by the MCP service for authentication
MCP_API_KEY=your_mcp_api_key_here

# Name of the Postgres database
POSTGRES_DB=your_postgres_db_here
# Username for the Postgres connection
POSTGRES_USER=your_postgres_user_here
# Password for the Postgres user
POSTGRES_PASSWORD=your_postgres_password_here
# Hostname of the Postgres service
POSTGRES_HOST=postgres
# Port where Postgres listens
POSTGRES_PORT=5432
# Complete Postgres DSN for async services
PG_DSN=postgresql://your_postgres_user_here:your_postgres_password_here@postgres:5432/your_postgres_db_here

# Redis connection URL
REDIS_URL=redis://redis:6379/0
# TTL for whisper dedupe keys in seconds
WHISPER_DEDUPE_TTL=300

# Confidence cutoff for using local echo model; higher value sends more ticks to Whisperer
LOCAL_THRESHOLD=0.6

# OpenAI API credentials
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
DISCORD_TOKEN=
MCP_MEMORY_API_URL=

# Base URL for the Qdrant vector database service
QDRANT_URL=http://qdrant:6333
# API key for Qdrant (leave empty if not required)
QDRANT_API_KEY=

# Generic vector database URL (overrides QDRANT_URL if set)
VECTOR_DB_URL=http://qdrant:6333

# Local model served via Ollama or similar
LOCAL_LLM_MODEL=llama3:8b-instruct

# Redis journal persistence
# Directory where MCP writes journal entries
PULSE_JOURNAL_PATH=/app/data/journal
# Set to "true" to mirror journals to Kafka instead of Redis only
USE_KAFKA_JOURNAL=false
