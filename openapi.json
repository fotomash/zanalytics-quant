{
  "openapi": "3.0.0",
  "info": {
    "title": "Pulse API",
    "version": "1.0.0",
    "description": "API that returns the last ticks for a given symbol."
  },
  "servers": [
    { "url": "http://localhost:8000" }
  ],
  "paths": {
    "/api/pulse/ticks": {
      "get": {
        "operationId": "get_tick_buffer",
        "summary": "Fetch the last ticks for a symbol.",
        "description": "Returns recent tick data including timestamps and prices from Redis.",
        "parameters": [
          {
            "name": "symbol",
            "in": "query",
            "required": true,
            "schema": { "type": "string" },
            "description": "Symbol identifier (e.g., EURUSD)"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response with tick data",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "symbol": { "type": "string" },
                    "ticks": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "timestamp": { "type": "string" },
                          "price": { "type": "number" }
                        }
                      }
                    },
                    "source": { "type": "string" }
                  }
                }
              }
            }
          },
          "400": { "description": "Invalid symbol or missing parameter" },
          "500": { "description": "Server error" }
        }
      }
    }
  }
}
