FROM python:3.11-slim

WORKDIR /app

# Install dependencies (if needed, add confluent_kafka here if using Kafka version)
RUN pip install --no-cache-dir \
    redis \
    pandas \
    numpy \
    confluent_kafka \
    requests

COPY tick_to_bar.py /app/tick_to_bar.py

CMD ["python", "tick_to_bar.py"]
