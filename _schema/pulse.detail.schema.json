{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "pulse.detail.schema.json",
  "title": "PulseDetail",
  "type": "object",
  "additionalProperties": false,
  "required": ["structure", "liquidity", "wyckoff", "risk", "confluence"],
  "properties": {
    "structure": {
      "type": "object",
      "properties": { "passed": { "type": "boolean" } },
      "required": ["passed"],
      "additionalProperties": true
    },
    "liquidity": {
      "type": "object",
      "properties": { "passed": { "type": "boolean" } },
      "required": ["passed"],
      "additionalProperties": true
    },
    "wyckoff": {
      "type": "object",
      "properties": { "passed": { "type": "boolean" } },
      "required": ["passed"],
      "additionalProperties": true
    },
    "risk": {
      "type": "object",
      "properties": { "passed": { "type": "boolean" } },
      "required": ["passed"],
      "additionalProperties": true
    },
    "confluence": {
      "type": "object",
      "properties": {
        "passed": { "type": "boolean" },
        "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
      },
      "required": ["passed", "confidence"],
      "additionalProperties": true
    }
  }
}

